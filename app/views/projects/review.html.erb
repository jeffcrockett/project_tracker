<%= render "shared/menu"%>
<container>
  <div class="row">
    <div class="col-lg-6" style="padding-top:20px; padding-left:50px;">
        <%= render "shared/user_preferences"%>
        
    </div>
    <div class="col-lg-6" style="padding-top: 20px;">
        <% if @start_date && @end_date && @min_confidence && @max_confidence %>
 <%# Shipments for 1/1/2019 through 1/31/2019
                   Confidence level 100    (if min and max are different, it will say, e.g 75-100) %>
        <h3>Shipments for <%= @start_date %> through <%= @end_date %></h3>
        <h5>Confidence level <%= @min_confidence == @max_confidence ? @max_confidence : @min_confidence.to_s + "-" + @max_confidence.to_s %></h5>
        <% @full_shipments.each do |ship| %>
            <p><%=ship[1].date%> - <%= ship[0] %> - <%= ship[1].product.name%> - <%=ship[1].quantity%></p>
        <% end %>
         <table style="border: 1px solid black;">
      <% @results_hash.keys.each do |key| %>
        <tr>
          <th><%= key %></th>
          <td>
            <table>
              <tr>
                <th>Revenue</th>
                <% @results_hash[key][:revenue].each do |amount| %>
                <td><%= amount %></td>
                <% end %>
                <th><%= @results_hash[key][:total_revenue] %></th>
              </tr>
              <tr>
                <th>Margin</th>
                <% @results_hash[key][:margin].each do |amount| %>
                <td><%= amount %></td>
                <% end %>
                <th><%= @results_hash[key][:total_margin] %></th>
              </tr>
            </table>
          </td>
        </tr>
      <% end %>
      </table>
    <table style="border: 1px solid black;">
      <tr>
        <th>Date</th>
        <th>Net Cash Flow</th>
        <th>Cumulative Cash Flow</th>
        <th>Shipment Description</th>
      </tr>
      <% @cash_flow.each do |row| %>
      <tr>
        <td><%= row[0] %></td>
        <td><%= row[1] %></td>
        <td><%= row[2] %></td>
        <td><%= row[3] %></td>
      <tr>
      <% end %>

      </table>
    </div>
  </div>
</container>
<% end %>