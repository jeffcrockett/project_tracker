<div style="height:40px"></div>
<%= form_for @distributor do |f| %>
  <div class="form-group">
    <%= f.label :name, "Distributor name:", class: "control-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :discount, "Discount level:", class: "control-label" %>
    <%= f.text_field :discount, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :notes, "Notes:", class: "control-label" %>
    <%= f.text_field :notes, class: "form-control" %>
  </div>
  <%= f.submit "Submit", class: "btn btn-default btn-primary" %>
<% end %>
