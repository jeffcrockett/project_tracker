<div style="height:40px"></div>
<%= form_for @user do |u| %>
  <div class="form-group">
    <%= u.label :name, "User name:", class: "control-label" %>
    <%= u.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :password, "Password:", class: "control-label" %>
    <%= f.text_field :password, class: "form-control" %>
  </div>
  <div class="form-check">
    <input type="checkbox" class="form-check-input" id="adminCheck">
    <label class="form-check-label" for="adminCheck">Admin</label>
  </div>
    <div class="form-check">
    <input type="checkbox" class="form-check-input" id="execCheck">
    <label class="form-check-label" for="execCheck">Exec</label>
  </div>
  <%= f.submit "Submit", class: "btn btn-default btn-primary" %>
<% end %>