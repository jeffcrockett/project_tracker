<container>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-1"></div>

      
    <div class="col">
      <div>
        <h1>Add a Product</h1>
      </div>
      <form>
        <div class="form-group">
          <label for="productName">Product name</label>
          <input type="string" class="form-control" id="productName" placeholder="Enter product name">
        </div>
        <div class="form-group">
          <label for="productPrice">Price</label>
          <input type="number" class="form-control" id="productPrice" placeholder="Enter price">
        </div>
        <div class="form-group">
          <label for="productCOGS">COGS</label>
          <input type="number" class="form-control" id="productCOGS" placeholder="Enter COGS">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>


    <div class="col-sm-1"></div>
    <div class="col-md-2"></div>
  </div>
</container>
