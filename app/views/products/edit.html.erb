<%= render "shared/menu" %>

<container>
  <div class="row">
    <div class="mx-auto" style="width:300px; padding-top:20px;">
      <h1>Edit Products</h1>
      <h4 style="padding-top:20px;">Select a Product:</h4>
      <select id="prod_select" class="data-searchable" style="width:300px;">
        <option value=0></option>
        <% @products.each do |p| %>
          <% sel = p.id==@product.id ? 'selected="selected" ' : '' %>
          <option <%= "#{sel}" %> value= <%= p.id %> > <%= p.name %> </option>
        <% end %>
      </select>

      <% @theObject = @product %>
      <%= render 'shared/error_messages' %>
      <%= render "shared/product_form" %>
    </div>
  </div>
</container>
