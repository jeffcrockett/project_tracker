<%= render "shared/menu" %>

<container>
  <div class="row">
    <div class="mx-auto" style="width:300px; padding-top:20px;">
      <h1>Edit Distributors</h1>
      <h4 style="padding-top:20px;">Select a Distributor:</h4>
      <select id="dist_select" class="data-searchable" style="width:300px;">
        <option value=0></option>
        <% @distributors.each do |d| %>
          <option value= <%= d.id %> > <%= d.name %> </option>
        <% end %>
      </select>
    </div>
  </div>
</container>