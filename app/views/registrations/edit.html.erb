<%= render "shared/menu" %>

<container>
  <div class="row">
    <div class="mx-auto" style="width:300px; padding-top:20px;">
      <h1>View/Edit Registrations</h1>
      <h4 style="padding-top:20px;">Select a Registration:</h4>
      <select id="reg_select" class="data-searchable" style="width:300px;">
        <option value=0></option>
        <% @registrations.each do |r| %>
          <% sel = r.id==@registration.id ? 'selected="selected" ' : '' %>
          <option <%= "#{sel}" %> value= <%= r.id %> > <%= r.name %> </option>
        <% end %>
      </select>

      <% @theObject = @registration %>
      <%= render 'shared/error_messages' %>
      <%= render "shared/registration_form" %>
    </div>
  </div>
</container>
